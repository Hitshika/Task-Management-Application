<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Greeting Message -->
    <TextView
        android:id="@+id/login_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome, CPUT Students!"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Logo Image -->

    <!-- Email Address Input -->

    <!-- Password Input -->

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_greeting"
        android:layout_marginTop="-113dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/push" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_marginTop="-271dp"
        android:layout_marginBottom="16dp"
        android:hint="Email Address"
            android:textSize="28sp"
            android:textStyle="bold"
        android:inputType="textEmailAddress"
        android:padding="12dp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_email"
        android:layout_marginBottom="32dp"
        android:hint="Password"
        android:inputType="textPassword"
            android:textSize="28sp"
            android:textStyle="bold"
        android:padding="12dp"/>

    <!-- Sign Up Text -->

    <!-- Login Button -->

    <!-- Back to Splash Screen Button -->

    <TextView
        android:id="@+id/sign_up_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password"
        android:layout_marginTop="-20dp"
        android:padding="8dp"
        android:text="Need an account? Sign up"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:padding="12dp"
        android:text="Login"
            android:textStyle="bold"
            android:textSize="20sp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/back_to_splash_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:layout_marginTop="0dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:padding="12dp"
        android:text="Back to Splash Screen"
            android:textStyle="bold"
            android:textSize="20sp"
        android:textColor="@android:color/white" />
</RelativeLayout>
